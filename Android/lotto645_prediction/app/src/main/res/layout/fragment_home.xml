    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LinearLayout_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="[업데이트]: "/>
            <TextView
                android:id="@+id/TextView_update_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="..."/>
            <Button
                android:id="@+id/Button_checks_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="확인/다운로드" />
            <Button
                android:id="@+id/Button_donation_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="후원(기부)하기..." />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:visibility="visible"
                android:background="#ABABAB"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_gravity="center|center_vertical|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <EditText
                android:id="@+id/EditText_algorithm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="algo."
                android:inputType="none"
                android:enabled="false"
                android:focusable="false"
                android:text="1"/>
            <Button
                android:id="@+id/Button_algorithm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="알고리즘" />
            <EditText
                android:id="@+id/EditText_generate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="반복 생성"
                android:inputType="numberDecimal"
                android:text="100"/>
            <EditText
                android:id="@+id/EditText_total_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="게임 수"
                android:inputType="numberDecimal"
                android:text="5"/>
            <Button
                android:id="@+id/Button_generate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:text="생성!" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="당첨번호\n확인"/>
            <EditText
                android:id="@+id/EditText_winning_num1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="1"
                android:inputType="numberDecimal"
                android:textStyle="bold"
                android:text=""/>
            <EditText
                android:id="@+id/EditText_winning_num2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="2"
                android:inputType="numberDecimal"
                android:textStyle="bold"
                android:text=""/>
            <EditText
                android:id="@+id/EditText_winning_num3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="3"
                android:inputType="numberDecimal"
                android:textStyle="bold"
                android:text=""/>
            <EditText
                android:id="@+id/EditText_winning_num4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="4"
                android:inputType="numberDecimal"
                android:textStyle="bold"
                android:text=""/>
            <EditText
                android:id="@+id/EditText_winning_num5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="5"
                android:inputType="numberDecimal"
                android:textStyle="bold"
                android:text=""/>
            <EditText
                android:id="@+id/EditText_winning_num6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="6"
                android:inputType="numberDecimal"
                android:textStyle="bold"
                android:text=""/>
            <EditText
                android:id="@+id/EditText_winning_num7_bonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="7b"
                android:inputType="numberDecimal"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:text=""/>
            <Button
                android:id="@+id/Button_checks_numbers_clear"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="지움" />
            <Button
                android:id="@+id/Button_checks_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="확인" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:visibility="visible"
                android:background="#ABABAB"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_gravity="center|center_vertical|center_horizontal"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:layout_weight="1">
            <TextView
                android:id="@+id/TextView_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="4dp"
                android:hint="결과"
                android:textIsSelectable="true"
                android:textSize="20sp" />
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>